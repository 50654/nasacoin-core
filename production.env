# NASA Coin Production Environment Configuration
# ================================================

# Network Configuration
NODE_ENV=production
NETWORK=mainnet
CHAIN_ID=1

# Ethereum Mainnet RPC URLs (Primary and Fallback)
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
ETHEREUM_RPC_URL_BACKUP=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_RPC_URL_FALLBACK=https://rpc.ankr.com/eth

# API Keys for Production
ALCHEMY_API_KEY=your_alchemy_api_key_here
INFURA_PROJECT_ID=your_infura_project_id_here
ETHERSCAN_API_KEY=your_etherscan_api_key_here
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here

# Security Configuration
PRIVATE_KEY=your_production_private_key_here
ADMIN_ADDRESS=your_admin_address_here
TREASURY_ADDRESS=your_treasury_address_here

# Contract Configuration
CONTRACT_NAME=NASA Coin
CONTRACT_SYMBOL=NASAPEPE
CONTRACT_DECIMALS=18
MAX_SUPPLY=5000000000000000000000000
INITIAL_SUPPLY=1000000000000000000000000
BLOCK_REWARD=500000000000000000000000

# Mining Configuration
MINING_DIFFICULTY=1000
MINING_COOLDOWN=600
STAKING_APY=1000
MINING_POOL_FEE=250

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/nasacoin_prod
REDIS_URL=redis://localhost:6379

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# API Configuration
API_PORT=8080
API_HOST=0.0.0.0
CORS_ORIGIN=https://nasacoin.io,https://www.nasacoin.io
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# PoW-Wow Security
# Enable a lightweight proof-of-work gate for sensitive API paths
POWWOW_ENABLED=false
# Bits of leading-zero difficulty target (higher is harder). Typical range: 16-22
POWWOW_DIFFICULTY=18
# Challenge TTL in seconds
POWWOW_CHALLENGE_TTL=60
# Token TTL in seconds
POWWOW_TOKEN_TTL=120
# Header clients must send with the minted token
POWWOW_HEADER_NAME=X-PoW-Token
# Comma-separated list of protected path prefixes
POWWOW_PROTECTED_PATHS=/api/nasacoin

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=nasacoin-backups

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
FROM_EMAIL=noreply@nasacoin.io

# Notification Configuration
DISCORD_WEBHOOK_URL=your_discord_webhook_url
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Load Balancer Configuration
LOAD_BALANCER_ENABLED=true
NGINX_CONF_PATH=/etc/nginx/sites-available/nasacoin
SSL_CERT_PATH=/etc/ssl/certs/nasacoin.crt
SSL_KEY_PATH=/etc/ssl/private/nasacoin.key

# Docker Configuration
DOCKER_REGISTRY=registry.nasacoin.io
DOCKER_IMAGE_TAG=latest
DOCKER_COMPOSE_FILE=docker-compose.prod.yml

# Kubernetes Configuration
K8S_NAMESPACE=nasacoin-prod
K8S_CONFIG_PATH=/etc/kubernetes/nasacoin
HELM_CHART_PATH=./helm/nasacoin

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Performance Configuration
CACHE_TTL=300
MAX_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=65000
