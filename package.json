{
  "name": "nasacoin-token-contract",
  "version": "1.0.0",
  "description": "NASA Coin ERC-20 Token Smart Contract",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:security": "hardhat test test/production.test.js --grep 'Security'",
    "test:performance": "hardhat test test/production.test.js --grep 'Performance'",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.js --network hardhat",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "deploy:mumbai": "hardhat run scripts/deploy.js --network mumbai",
    "deploy:bsc": "hardhat run scripts/deploy.js --network bsc",
    "deploy:bsc-testnet": "hardhat run scripts/deploy.js --network bscTestnet",
    "deploy:production": "hardhat run scripts/deploy.js --network mainnet",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:polygon": "hardhat verify --network polygon",
    "verify:mumbai": "hardhat verify --network mumbai",
    "verify:bsc": "hardhat verify --network bsc",
    "verify:production": "hardhat verify --network mainnet",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "coverage": "hardhat coverage",
    "build:dashboard": "node scripts/build-dashboard.js",
    "start:api": "node server.js",
    "start:production": "NODE_ENV=production node server.js",
    "health:check": "./scripts/health-check.sh",
    "deploy:prod": "./scripts/deploy-production.sh",
    "backup": "./scripts/backup.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "npx slither contracts/",
    
    "docker:build": "docker-compose -f docker-compose.prod.yml build",
    "docker:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:restart": "docker-compose -f docker-compose.prod.yml restart"
  },
  "keywords": [
    "nasa",
    "coin",
    "cryptocurrency",
    "erc20",
    "token",
    "blockchain",
    "defi"
  ],
  "author": "NASA Coin Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "chai": "^4.3.10",
    "ethers": "^6.14.0",
    "hardhat": "^2.17.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.4",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@sentry/node": "^7.91.0",
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.14.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "tmp": "0.2.5",
    "winston": "^3.11.0"
  },
  "overrides": {
    "tmp": "0.2.5"
  },
  "directories": {
    "test": "test"
  }
}
